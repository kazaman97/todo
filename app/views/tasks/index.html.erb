<div class="row">
  <div class="col-lg-12">
<div class="page-header">
<h1>ToDo管理</h1>
</div>
</div>
  <% @tasks.each do |task| %>
  <div class="col-lg-8">
  <% if task.comprited? %>
   <div class="well well-sm">
  <li><strike><%= task.name %> | <%= task.description %> | <%= task.date.strftime("%Y-%m-%d %H:%M:%S") %></strike></li>
  </div>
  <% else %>
  <div class="well well-sm">
  <li><%= task.name %> | <%= task.description %> | <%= task.date.strftime("%Y-%m-%d %H:%M:%S") %></li>
  </div>
  <% end %>
  </div>
  <div class="col-lg-4">
  <div class="btn-group">
  <% if task.comprited? %>
<%= link_to "完了済み", not_comprited_path(task),method: :post ,class: "btn btn-default" %>
  <% else %>
  <%= link_to "完了する", comprited_path(task), method: :post, class:"btn btn-default" %>
  <% end %>
  <%= link_to "編集する", edit_task_path(task),class: "btn btn-info" %>
  <%= link_to "削除する", task_path(task),class: "btn btn-danger", method: :delete , data: {confirm: "本当に削除しますか？"}%>
  </div>
  </div>
  <% end %>
  </div>
  <div class="row">
  <%= form_for @task do |f| %>
  <div class="col-lg-8">
  <div class="form-inline form-group">
  <div class="form-group">
    <%= f.text_field :name, class: "form-control",placeholder:"やること" %>
    </div>
    <div class="form-group">
    <%= f.text_field :description, class: "form-control",placeholder:"内容" %>
    </div>
    <div class="form-group">
    </div>
    <div class='input-group date datetimepicker'>
    <%= f.text_field :date, class: 'form-control',placeholder:"期日" %>
    <span class="input-group-addon">
    <span class="fa fa-calendar"></span>
 </span>
</div>
<%= f.submit"作成" %>

    </div>
    </div>
  </div>
  <% end %>
  <body style="background-image : url(<%= current_user.url_image %>); background-size: cover;"">
